# Add ~/bin to PATH if not already present
if [[ ":$PATH:" != *":$HOME/bin:"* ]]; then
    export PATH="$HOME/bin:$PATH"
fi

export RAILS_ENV=production
export RAILS_WEBHOOK=$HOME/rails-master-hook
export RUN_FILE=$RAILS_WEBHOOK/run-rails-master-hook
export LOCK_FILE=$RAILS_WEBHOOK/lock-rails-master-hook
export CONTRIB_APP_LOCK_FILE=$HOME/rails-contributors/current/tmp/updating
